@model SignUpAdminModel
@{
    ViewData["Title"] = "Registration";
}

<h1>Sign Up</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div class="form-group">
                <input asp-for="@Model.Name" class="form-control" placeholder="Enter name..." />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.SurName" class="form-control" placeholder="Enter surname..." />
                <span asp-validation-for="@Model.SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Login" class="form-control" placeholder="Enter login..." />
                <span asp-validation-for="@Model.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Email" class="form-control" placeholder="Enter email..." />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Role" class="form-control" list="groups" placeholder="Choose a role">
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
                <datalist id="groups">
                    @foreach (var elem in Enum.GetValues(typeof(Roles)))
                    {
                        <option value=@elem>@elem</option>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Password" class="form-control" placeholder="Enter password..." />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.RepeatPassword" class="form-control" placeholder="Confirm password..." />
                <span asp-validation-for="@Model.RepeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-controller="SuperAdmin" asp-action="RegisterUser" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Users" asp-controller="SuperAdmin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}